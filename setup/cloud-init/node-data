#cloud-config

coreos:
  etcd2:
    # listen on both the official ports and the legacy ports
    # legacy ports can be omitted if your application doesn't depend on them
    listen-client-urls: http://0.0.0.0:2379,http://0.0.0.0:4001
    proxy: on
    # replace it with actual names and ips when before bootstrapping
    # initial-cluster: ${NAME1=PRIVATE_IP1,NAME2=PRIVATE_IP2,NAME3=PRIVATE_IP3}
    initial-cluster: "30fad02ac5a645bfa27b043b5eeb92bc=http://172.17.8.100:2380"

  fleet:
    public-ip: $public_ipv4
    metadata: "role=node"

  flannel:
    interface: $public_ipv4

  units:
    - name: etcd2.service
      command: start

    - name: fleet.service
      command: start

    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=2375
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
